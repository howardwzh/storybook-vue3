{
  "printWidth": 80, // 每行代码的最大长度，超过时会换行
  "tabWidth": 2, // 缩进时使用的空格数
  "useTabs": false, // 是否使用制表符进行缩进，默认为 false（即使用空格）
  "semi": true, // 语句末尾是否加分号，默认为 true
  "singleQuote": true, // 是否使用单引号，默认为 false（即使用双引号）
  "quoteProps": "as-needed", // 只在必要时加引号（例如对象的属性名不是合法标识符时）
  "jsxSingleQuote": false, // 在 JSX 中是否使用单引号，默认为 false（即使用双引号）
  "trailingComma": "es5", // 是否在对象、数组等末尾加逗号，"none" 表示不加，"es5" 表示符合 ES5 标准的加法（如数组、对象的最后一个元素），"all" 表示所有元素后加
  "bracketSpacing": true, // 对象字面量的大括号内是否添加空格
  "jsxBracketSameLine": false, // 在多行 JSX 元素的最后一个 `>` 是否与属性同行
  "arrowParens": "always", // 箭头函数参数是否总是加括号，"avoid" 仅当参数只有一个时不加括号，"always" 始终加括号
  "endOfLine": "auto", // 设置行尾换行符类型，"lf"（Linux）、"crlf"（Windows）、"cr"（老式 Mac）、"auto" 根据操作系统自动选择
  "htmlWhitespaceSensitivity": "css", // 控制 HTML 中的空白符如何被处理，"css" 使用 CSS 的样式，"strict" 严格，"ignore" 忽略
  "vueIndentScriptAndStyle": true, // 是否在 Vue 文件的 <script> 和 <style> 标签中进行缩进
  "embeddedLanguageFormatting": "auto", // 格式化嵌入的代码（例如在 HTML 中嵌入的 JavaScript 或 Vue 中的模板）
  "singleAttributePerLine": true // 每个属性占一行（特别是对于较长的属性列表）
}